{
  "version": 2,
  "builds": [
    {
      "src": "next-api/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "vite-app/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "next-api/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "vite-app/dist/$1"
    }
  ]
} 