{
   "builds": [
    {
      "src": "vite-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],  
  "rewrites": [
    {
      "source": "/api/(.*)",                     
      "destination": "/next-api/app/api/$1"
    },
    {
      "source": "/streaming/(.*)",               
      "destination": "/next-api/app/streaming/$1"
    },
    {
      "source": "/next-api/(.*)",                  
      "destination": "/next-api/$1"
    },
    {
      "source": "/(.*)",                       
      "destination": "/vite-app/$1"
    }
  ],
  "headers": [
    {
      "source": "/next-api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    },
    {
      "source": "/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/(.*).mjs",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/(.*).cjs",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ]
}